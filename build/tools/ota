#!/bin/bash
# PornAOSP OTA

# Determine build properties
MODVERSION=`grep ro.paosp.version $OUT/system/build.prop | cut -d'=' -f2`
DEVICE=`grep ro.paosp.device $OUT/system/build.prop | cut -d'=' -f2`
OTA_TYPE=`grep ro.paosp.type $OUT/system/build.prop | cut -d'=' -f2`
DONATE=`grep ro.paosp.donate $OUT/system/build.prop | cut -d'=' -f2`

PAOSP_TARGET_PACKAGE=$MODVERSION-$DEVICE.zip

# Create OTA XML file
if [ -f $ANDROID_BUILD_TOP/ota_conf ]; then
if [ -z "$DONATE" ]; then

cat >$OUT/ota_$DEVICE.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<PornOTA xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ota.xsd">
    <Oreo>
        <$DEVICE>
            <Filename>$MODVERSION</Filename>
            <RomUrl
                id="rom"
                title="ROM"
                description="Download the latest build">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE</RomUrl>
            <MD5Url
                id="md5"
                title="MD5"
                description="Download MD5 of the latest build">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE.md5sum</MD5Url>
            <OpenGappsUrl
                id="opengapps"
                title="Open Gapps"
                description="Download Open Gapps">http://opengapps.org</OpenGappsUrl>
            <ChangelogUrl
                id="changelog"
                title="Changelog"
                description="View the latest changelog">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/Changelog.txt</ChangelogUrl>
        </$DEVICE>
    </Oreo>
</PornOTA>
EOF

else

cat >$OUT/ota_$DEVICE.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<PornOTA xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ota.xsd">
    <Oreo>
        <$DEVICE>
            <Filename>$MODVERSION</Filename>
            <RomUrl
                id="rom"
                title="ROM"
                description="Download the latest build">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE</RomUrl>
            <MD5Url
                id="md5"
                title="MD5"
                description="Download MD5 of the latest build">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE.md5sum</MD5Url>
            <OpenGappsUrl
                id="opengapps"
                title="Open Gapps"
                description="Download Open Gapps">http://opengapps.org</OpenGappsUrl>
            <ChangelogUrl
                id="changelog"
                title="Changelog"
                description="View the latest changelog">https://mirrors.c0urier.net/android/teamhorizon/O/$OTA_TYPE/$DEVICE/Changelog.txt</ChangelogUrl>
            <DonateUrl
                id="donate"
                title="Support"
                description="Donate to your device maintainer">$DONATE</DonateUrl>
        </$DEVICE>
    </Oreo>
</PornOTA>
EOF

fi
fi
